---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  isPost?: boolean;
  isAbout?: boolean;
}

const { title, description = "Software Engineer building tools for developers", isPost = false, isAbout = false } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogType = isPost ? 'article' : 'website';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[var(--color-bg)] text-[var(--color-text)] flex flex-col">
    <div class="flex-1">
      <div class="max-w-2xl mx-auto px-6 py-12">
        <header class="mb-16">
          <nav class="flex items-center justify-between">
            {isPost ? (
              <a href="/" class="nav-link text-sm flex items-center gap-1">
                <span>‚Üê</span> Notes
              </a>
            ) : (
              <a href="/" class="text-lg font-semibold text-[var(--color-text)]">
                Sergei Rastrigin
              </a>
            )}
            {!isAbout && <a href="/about" class="nav-link">About</a>}
          </nav>
        </header>

        <main>
          <slot />
        </main>
      </div>
    </div>

  </body>
</html>
